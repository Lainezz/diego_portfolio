---
import { Picture } from "astro:assets";
import viewnext from "../../assets/images/works/viewnext.svg";
import junta_andalucia from "../../assets/images/works/junta_andalucia.svg";
import ec from "../../assets/images/works/european_commission.svg";
import ual from "../../assets/images/edu/ual.png";
import ugr from "../../assets/images/edu/ugr.svg";
---

<div class="experience__exp_edu">
    <div class="exp_edu__title">EXPERIENCE</div>
    <div class="exp_edu__jobs">
        <div class="jobs__jobs_container">
            <div class="jobs_container__title_logo">
                <Picture src={ec} alt="European Comission" class="title_logo__logo" />
                <div class="title_logo__title">EUROPEAN COMMISSION (2017-2021)</div>
            </div>
            <div class="jobs_container__desc">
                <b class="desc__bold_title">Senior Java Developer</b><br>
                Java. Spring Boot. JWT. JSON. Swagger. Oracle DB. XSLT. SOAP. SCRUM methodology.
            </div>
        </div>
        <div class="jobs__jobs_container">
            <div class="jobs_container__title_logo">
                <Picture src={viewnext} alt="European Comission" class="title_logo__logo" />
                <div class="title_logo__title">VIEWNEXT (2015-2017)</div>
            </div>
            <div class="jobs_container__desc">
                <b class="desc__bold_title">Junior Java Developer</b><br>
                JavaEE. Spring. JPA/Hibernate. Oracle DB. 4gl. SCRUM methodology.
            </div>
        </div>
        <div class="jobs__jobs_container">
            <div class="jobs_container__title_logo">
                <Picture src={junta_andalucia} alt="European Comission" class="title_logo__logo" />
                
                <div class="title_logo__title">ANDALUSIAN GOVERNMENT (2021-2025)</div>
            </div>
            <div class="jobs_container__desc">
                <b class="desc__bold_title">Vocational Program IT Teacher</b><br>
                IT Teacher. Spring Boot. Laravel. Java. Kotlin. NodeJS, etc. 
                Coordinated the school’s IT department and entrepreneurship program.
                
            </div>
        </div>
    </div>
</div>
<div class="experience__exp_edu">
    <div class="exp_edu__title">EDUCATION</div>
    <div class="exp_edu__edu">
        <div class="edu__edu_container">
            <div class="edu_container__title_logo">
                <Picture src={ual} alt="University of Almería" class="title_logo__logo" />
                <div class="title_logo__title">UNIVERSITY OF ALMERÍA</div>
            </div>
            <div class="edu_container__desc">
                BS on Computer Engineering, Information Technology and Software Engineering
            </div>
        </div>
        <div class="edu__edu_container">
            <div class="edu_container__title_logo">
                <Picture src={ugr} alt="University of Granada" class="title_logo__logo" />
                <div class="title_logo__title">UNIVERSITY OF GRANADA</div>
            </div>
            <div class="edu_container__desc">
                Master's degree in Teacher Training in Compulsory Secondary and Upper Secondary School Education, Vocational Training and Languages
            </div>
        </div>
    </div>
</div>
